@page
@model LoginModel
@{
    ViewData["Title"] = "Logowanie";
}

<h1 class="text-center my-4">@ViewData["Title"]</h1>

<div class="container d-flex justify-content-center">
    <div class="col-md-6 col-lg-5">
        <!-- Kontener dla mniejszych i średnich ekranów -->
        <form id="account" method="post" class="shadow p-4 rounded bg-light">
            <h2 class="text-center mb-4">Zaloguj się</h2>

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger position-absolute small" style="bottom: -18px;"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Hasło" />
                <label asp-for="Input.Password">Hasło</label>
                <span asp-validation-for="Input.Password" class="text-danger position-absolute small" style="bottom: -18px;"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                <label asp-for="Input.RememberMe" class="form-check-label">
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>

            <button id="login-submit" type="submit" class="w-100 btn darkcyan-button btn-lg mt-4">Zaloguj się</button>

            <div class="text-center mt-3">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Zapomniałeś hasła?</a>
                </p>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Zarejestruj się jako nowy użytkownik</a>
                </p>
                <!--<p>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Wyślij ponownie potwierdzenie email</a>
                </p>-->
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
