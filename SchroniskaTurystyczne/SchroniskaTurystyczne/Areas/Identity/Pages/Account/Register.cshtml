@page
@model RegisterModel
@{
    ViewData["Title"] = "Rejestracja";
}

<h1 class="text-center my-4">@ViewData["Title"]</h1>

<div class="container d-flex justify-content-center">
    <div class="col-md-6 col-lg-5">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="shadow p-4 rounded bg-light">
            <h2 class="text-center mb-4">Stwórz nowe konto</h2>

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.FirstName" class="form-control" autocomplete="given-name" placeholder="First Name" />
                <label asp-for="Input.FirstName">Imię</label>
                <span asp-validation-for="Input.FirstName" class="text-danger position-absolute small" style="bottom: -18px;"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.LastName" class="form-control" autocomplete="family-name" placeholder="Last Name" />
                <label asp-for="Input.LastName">Nazwisko</label>
                <span asp-validation-for="Input.LastName" class="text-danger position-absolute small" style="bottom: -18px;"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="tel" placeholder="Phone Number" />
                <label asp-for="Input.PhoneNumber">Numer telefonu</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger position-absolute small" style="bottom: -18px;"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger position-absolute small" style="bottom: -18px;"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Hasło</label>
                <span asp-validation-for="Input.Password" class="text-danger position-absolute small" style="bottom: -18px;"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Powtórz Hasło</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger position-absolute small" style="bottom: -18px;"></span>
            </div>

            <div class="form-floating mb-3">
                <select asp-for="Input.Role" class="form-control">
                    <option value="Guest">Gość</option>
                    <option value="Exhibitor">Właściciel schroniska</option>
                </select>
                <label asp-for="Input.Role">Rola</label>
                <span asp-validation-for="Input.Role" class="text-danger position-absolute small" style="bottom: -18px;"></span>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 darkcyan-button btn-lg mt-4">Zarejestruj się</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
